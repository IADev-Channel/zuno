{
  "private": true,
  "workspaces": [
    "packages/*",
    "exercise/*"
  ],
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "login": "pnpm login",
    "deploy-core": "pnpm --filter @iadev93/zuno publish --access public",
    "deploy-react": "pnpm --filter @iadev93/zuno-react publish --access public",
    "deploy-express": "pnpm --filter @iadev93/zuno-express publish --access public",
    "deploy-elysia": "pnpm --filter @iadev93/zuno-elysia publish --access public",
    "deploy": "pnpm deploy-core && pnpm deploy-react && pnpm deploy-express && pnpm deploy-elysia",
    "build-core": "pnpm --filter @iadev93/zuno run build",
    "build-react": "pnpm --filter @iadev93/zuno-react run build",
    "build-express": "pnpm --filter @iadev93/zuno-express run build",
    "build-elysia": "pnpm --filter @iadev93/zuno-elysia run build",
    "build": "pnpm build-core && pnpm build-react && pnpm build-express && pnpm build-elysia",
    "start-html": "pnpm --filter exercise-basic-html run start",
    "start-react": "pnpm --filter exercise-react run start",
    "start-http-server": "pnpm --filter exercise-http-server run start",
    "start-express": "pnpm --filter exercise-express run start",
    "start-elysia": "pnpm --filter exercise-elysia run start",
    "start": "concurrently \"pnpm start-html\" \"pnpm start-react\" \"pnpm start-http-server\" \"pnpm start-express\" \"pnpm start-elysia\""
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "typescript": "^5.9.3"
  }
}